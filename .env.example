# Configuración para MercadoPago
# Copia este archivo a .env y completa con tus credenciales reales

# MercadoPago Access Token (obtén el tuyo desde tu cuenta de MercadoPago)
MERCADOPAGO_ACCESS_TOKEN=TEST-your-access-token-here

# URLs de tu aplicación
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Base de datos
DATABASE_URL="postgresql://username:password@localhost:5432/neocommerce"

# NextAuth
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Configuración de cookies de sesión
SESSION_COOKIE_NAME=next-auth.session-token
SESSION_MAX_AGE=3600

# Otros
NODE_ENV=development
