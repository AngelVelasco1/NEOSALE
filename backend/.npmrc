# Usar bun como gestor de paquetes
# Este archivo previene que npm instale dependencias accidentalmente
engine-strict=true

# Optimización de instalación de dependencias
# Solo instalar dependencias opcionales para la plataforma actual
optional=false

# No descargar binarios innecesarios de esbuild
supportedArchitectures.os=current
supportedArchitectures.cpu=current

# Usar cache agresivo para acelerar instalaciones
prefer-offline=true
