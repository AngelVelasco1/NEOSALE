# ============================================
# FRONTEND Environment Variables
# ============================================

# ── DATABASE ──
DATABASE_URL="postgresql://user:password@host/database"

# ── API URLs (CRÍTICO para producción) ──
# En desarrollo: http://localhost:8000 (sin /api al final)
# En Render: inyectado automáticamente desde render.yaml como NEXT_PUBLIC_API_URL
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ── AUTHENTICATION (Next Auth / Auth.js) ──
NEXTAUTH_URL="http://localhost:3000"
AUTH_SECRET="tu-secret-aleatorio-aqui"
AUTH_TRUST_HOST="true"

# Google OAuth
AUTH_GOOGLE_ID="tu-google-oauth-client-id"
AUTH_GOOGLE_SECRET="tu-google-oauth-secret"

# Facebook OAuth
AUTH_FACEBOOK_ID="tu-facebook-app-id"
AUTH_FACEBOOK_SECRET="tu-facebook-app-secret"

# ── CLOUDINARY (Image Upload) ──
CLOUDINARY_CLOUD_NAME="tu-cloudinary-name"
CLOUDINARY_API_KEY="tu-api-key"
CLOUDINARY_API_SECRET="tu-api-secret"
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="tu-cloudinary-name"

# ── NEXT.JS CONFIG ──
NEXT_TELEMETRY_DISABLED=1
NODE_ENV="production"
DISABLE_ESLINT_PLUGIN=true
