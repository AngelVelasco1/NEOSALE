# ============================================================
# FRONTEND - Variables de Entorno para PRODUCCIÓN (Vercel)
# ============================================================
# Copia este archivo como .env.production.local para pruebas locales
# En Vercel, configura estas variables en:
# Dashboard → Tu Proyecto → Settings → Environment Variables
# ============================================================

# --- BASE DE DATOS ---
# Usa Neon (neon.tech), Railway, o Supabase
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/neosale?schema=public&sslmode=require"

# --- URLS DE LA APP ---
# URL donde quedará tu frontend en Vercel (se actualiza automáticamente)
NEXT_PUBLIC_APP_URL="https://tu-proyecto.vercel.app"
NEXTAUTH_URL="https://tu-proyecto.vercel.app"

# URL de tu backend desplegado en Railway/Render/Fly.io
NEXT_PUBLIC_API_URL="https://tu-backend.railway.app"

# --- AUTH.JS ---
# Genera con: openssl rand -base64 32
AUTH_SECRET="REEMPLAZA_CON_CLAVE_SEGURA_openssl_rand_-base64_32"
AUTH_TRUST_HOST="true"

# Google OAuth (console.cloud.google.com)
AUTH_GOOGLE_ID="tu-google-client-id.apps.googleusercontent.com"
AUTH_GOOGLE_SECRET="tu-google-client-secret"

# Facebook OAuth (developers.facebook.com)
AUTH_FACEBOOK_ID="tu-facebook-app-id"
AUTH_FACEBOOK_SECRET="tu-facebook-app-secret"

# --- CLOUDINARY (imágenes) ---
CLOUDINARY_CLOUD_NAME="tu-cloud-name"
CLOUDINARY_API_KEY="tu-cloudinary-api-key"
CLOUDINARY_API_SECRET="tu-cloudinary-api-secret"
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="tu-cloud-name"

# --- OPTIMIZACIONES ---
NEXT_TELEMETRY_DISABLED=1
NODE_ENV="production"
